package br.com.bytebank.banco.teste;

import java.io.UnsupportedEncodingException;
import java.nio.charset.Charset;

public class TesteUnicodeEEnding {
	public static void main(String[] args) throws UnsupportedEncodingException {
		String s = "C";
		System.out.println(s.codePointAt(0));
		
		System.out.println(setByte(s,Charset.defaultCharset().displayName()));
		
		
		
	}
	public static byte[] setByte(String palavra, String encoding) throws UnsupportedEncodingException{
        
		byte[] bytes = palavra.getBytes(encoding);
	
		System.out.println(bytes.length + " " + encoding);
		
		return bytes;
	}
}
